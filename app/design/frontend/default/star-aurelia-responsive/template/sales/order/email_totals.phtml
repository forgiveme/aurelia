/**
 * @var $this Mage_Sales_Block_Order_Totals
 * @see Mage_Sales_Block_Order_Totals
 */
?>
<?php foreach ($this->getTotals() as $_code => $_total): ?>
    <?php if ($_total->getBlockName()): ?>
        <?php echo $this->getChildHtml($_total->getBlockName(), false); ?>
    <?php else:?>
    <tr class="<?php echo $_code?>">
    	<td colspan="2"></td>
        <td <?php //echo $this->getLabelProperties()?>  style="font-family:'Vollkorn', Georgia, 'Times New Roman', Times, serif;border-left:1px solid #999;border-bottom:1px solid #999;font-size:12px;" >
        <?php
            $label=$this->escapeHtml($_total->getLabel());;
             if($_code=='subtotal')
             {
               $label= $this->__('Sub Total');
             }
             elseif($_code=='shipping')
             {
               $label= $this->__('Shipping');
             }
             elseif($_code=='grand_total')
             {
               $label= $this->__('Total');
             }
             ?>
            <?php if ($_total->getStrong()):?>
            <?php echo $label;?>
            <?php else:
            	echo $label;
             endif?>
        </td>
        <td <?php echo $this->getValueProperties()?> style="font-family:'Vollkorn', Georgia, 'Times New Roman', Times, serif;font-size:12px;border-right:1px solid #999;border-bottom:1px solid #999;" class="total_amount">
            <?php if ($_total->getStrong()):?>
            <?php echo $this->formatValue($_total) ?>
            <?php else:?>
            <?php echo $this->formatValue($_total) ?>
            <?php endif?>
        </td>
    </tr>
    <?php endif?>
<?php endforeach?>
