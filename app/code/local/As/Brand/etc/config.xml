<?xml version="1.0"?>
<config>
    <modules>
        <As_Brand>
            <version>0.1.0</version>
        </As_Brand>
    </modules>
    <frontend>
        <routers>
            <brand>
                <use>standard</use>
                <args>
                    <module>As_Brand</module>
                    <frontName>brand</frontName>
                </args>
            </brand>
        </routers>
        <layout>
            <updates>
                <brand>
                    <file>brand.xml</file>
                </brand>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
		<brand>
		<use>admin</use>
		<args>
		<module>As_Brand</module>
		<frontName>brand</frontName>
		</args>
		</brand>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<brand module="brand">
				<title>Awards</title>
				<sort_order>72</sort_order>               
				<children>
					<items module="brand">
						<title>Manage Awards</title>
						<sort_order>0</sort_order>
						<action>brand/adminhtml_brand</action>
					</items>
				</children>
			</brand>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<!--As_Brand>
							<title>Brand Module</title>
							<sort_order>10</sort_order>
						</As_Brand>-->
						<brand module="brand">
							<children>
								<items module="brand">
									<title>Manage Awards</title>
									<sort_order>11</sort_order>
								</items>
							</children>
						</brand>
						  <system>
                            <children>
                                <config>
                                    <children>
                                        <brand>
                                            <title>Brand Module</title>
                                        </brand>
                                    </children>
                                </config>
                            </children>
                        </system>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<brand>
					<file>brand.xml</file>
				</brand>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <brand>
                <class>As_Brand_Model</class>
                <resourceModel>brand_resource</resourceModel>
            </brand>
            <brand_resource>
                <class>As_Brand_Model_Resource</class>
                 <deprecatedNode>As_Brand_Model_Mysql4</deprecatedNode>
                <entities>
                    <brand>
                        <table>brand</table>
                    </brand>
                </entities>
            </brand_resource>
        </models>
        <resources>
            <brand_setup>
                <setup>
                    <module>As_Brand</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </brand_setup>
            <brand_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </brand_write>
            <brand_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </brand_read>
        </resources>
        <blocks>
            <brand>
                <class>As_Brand_Block</class>
            </brand>
        </blocks>
        <helpers>
            <brand>
                <class>As_Brand_Helper</class>
            </brand>
        </helpers>
    </global>
</config>