<?xml version="1.0"?>
<config>
	<sections>
		<silverpop translate="label" module="silverpop">
			<label>Silverpop</label>
			<tab>service</tab>
			<frontend_type>text</frontend_type>
			<sort_order>102</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<silverpop translate="label">
					<label>Silverpop</label>
					<frontend_type>text</frontend_type>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enabled translate="label comment">
							<label>Enabled</label>
							<comment><![CDATA[Whether to enable or disable silverpop functionality.]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</enabled>
						<spop_host translate="label comment">
							<label>Silverpop Host</label>
							<comment><![CDATA[Enter the silverpop host value. <br />Example: <span class="notice">api5.silverpop.com</span>]]></comment>
							<frontend_type>text</frontend_type>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</spop_host>
						<spop_username translate="label comment">
							<label>Silverpop Username</label>
							<comment><![CDATA[Enter the silverpop username. <br />Example: <span class="notice">example@example.com</span>]]></comment>
							<frontend_type>text</frontend_type>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</spop_username>
						<spop_password translate="label comment">
							<label>Silverpop Password</label>
							<comment><![CDATA[Enter the silverpop password. <br />Example: <span class="notice">123456</span>]]></comment>
							<frontend_type>password</frontend_type>
							<sort_order>4</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</spop_password>
						<spop_user_table_id translate="label comment">
							<label>Silverpop User Table ID</label>
							<comment><![CDATA[Enter the silverpop user table ID. <br />Example: <span class="notice">1146545</span>]]></comment>
							<frontend_type>text</frontend_type>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</spop_user_table_id>
						<spop_order_table_id translate="label comment">
							<label>Silverpop Order Table ID</label>
							<comment><![CDATA[Enter the silverpop order table ID. <br />Example: <span class="notice">1170170</span>]]></comment>
							<frontend_type>text</frontend_type>
							<sort_order>6</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</spop_order_table_id>
					</fields>
				</silverpop>
			</groups>
		</silverpop>
	</sections>
</config>
