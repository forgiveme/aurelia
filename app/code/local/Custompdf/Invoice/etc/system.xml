<?xml version="1.0"?>
<config>
    <tabs>
        <custompdf translate="label" module="custompdfinvoice">
            <label>Custom Invoice Pdf</label>
            <sort_order>30</sort_order>
        </custompdf>
    </tabs>
    <sections>
        <custompdfinvoice translate="label" module="custompdfinvoice">
            <label>Custom Invoice Pdf</label>
            <tab>custompdf</tab>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <custompdf_group translate="label">
                    <label>Custom Invoice Pdf Settings</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
						<custompdf_address translate="label">
							<label>Header Address</label>
							<frontend_type>textarea</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Please add complete address (HTML tags allowed)</comment>
						</custompdf_address>
						<custompdf_thanks_top translate="label">
							<label>Header Thanks Text</label>
							<frontend_type>textarea</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</custompdf_thanks_top>
						<custompdf_loyality_text translate="label">
							<label>Loyality Text</label>
							<frontend_type>textarea</frontend_type>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</custompdf_loyality_text>
						<custompdf_bottom_text translate="label">
							<label>Footer Text</label>
							<frontend_type>textarea</frontend_type>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</custompdf_bottom_text>
                    </fields>
                </custompdf_group>
            </groups>
        </custompdfinvoice>
    </sections>
</config>